<div class="col-md-6">
	<h2>Забыли пароль?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= render partial: "partials/form_errors", locals: { model: @user } %>

	  <div class="form-group">
	  	<%= fas_icon("envelope fa-lg") %>
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",  placeholder: "Введите ваш email" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Восстановить пароль", class: "btn btn-primary" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
