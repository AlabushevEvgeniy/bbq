<div class="col-md-6">
  <h2>Регистрация</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render partial: "partials/form_errors", locals: { model: @user } %>

    <div class="form-group">
      <%= fas_icon("envelope fa-lg") %>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",  placeholder: "Введите ваш email" %>
    </div>

    <div class="form-group">
      <%= fas_icon("unlock-alt fa-lg") %>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control",  placeholder: "Введите пароль" %>
    </div>

    <div class="form-group">
      <%= fas_icon("unlock-alt fa-lg") %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",  placeholder: "Введите пароль еще раз" %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="buffer-both">
    <%= render "devise/shared/links" %>
  </div>
</div>


