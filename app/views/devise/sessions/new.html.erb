<div class="col-md-6">
  <h2>Войти</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= fas_icon("envelope fa-lg") %>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Введите ваш email" %>
    </div>

    <div class="form-group">
      <%= fas_icon("unlock-alt fa-lg") %>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Введите пароль" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Войти", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="buffer-both">
    <%= render "devise/shared/links" %>
  </div>
</div>

